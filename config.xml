<?xml version='1.0' encoding='utf-8'?>
<widget id="ihk.export.app" version="1.2" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Export App</name>
    <description>
        Die Export-App der IHKs bietet kompaktes Wissen im Bereich Au√üenhandel.
    </description>
    <author email="contact@smissltd.com" href="http://cordova.io">
        SMISS ltd
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <plugin name="Storage" value="org.apache.cordova.Storage"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <preference name="DisallowOverscroll" value="true" />
        <preference name="StatusBarOverlaysWebView" value="false"/>
        <preference name="StatusBarBackgroundColor" value="#004f8d"/>
        <preference name="StatusBarStyle" value="blackopaque" />
    </platform>
    <preference name="Orientation" value="portrait"/>
</widget>
